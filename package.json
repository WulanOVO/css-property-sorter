            "align-content",
            "flex-grow",
            "flex-shrink",
            "flex-basis",
            "flex",
            "order",
            "grid-template-columns",
            "grid-template-rows",
            "grid-template-areas",
            "grid-column-gap",
            "grid-row-gap",
            "grid-gap",
            "grid-auto-columns",
            "grid-auto-rows",
            "grid-auto-flow",
            "grid-column-start",
            "grid-column-end",
            "grid-row-start",
            "grid-row-end",
            "grid-column",
            "grid-row",
            "grid-area",
            "box-sizing",
