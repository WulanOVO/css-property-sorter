{
  "name": "better-css-property-sorter",
  "displayName": "Better CSS Property Sorter",
  "description": "Sort CSS/SCSS properties by custom order, keep display effect unchanged, support comments and custom config.",
  "publisher": "Lanyibo-Wu",
  "license": "MIT",
  "icon": "images/icon.png",
  "keywords": [
    "css",
    "scss",
    "sort",
    "property",
    "order"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WulanOVO/css-property-sorter"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-property-sorter.sortCssProperties",
        "title": "%command.sortCssProperties.title%"
      },
      {
        "command": "css-property-sorter.sortCssPropertiesInFile",
        "title": "%command.sortCssPropertiesInFile.title%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "css-property-sorter.sortCssProperties",
          "when": "editorHasSelection && editorLangId =~ /css|scss/",
          "group": "navigation@100"
        },
        {
          "command": "css-property-sorter.sortCssPropertiesInFile",
          "when": "editorLangId =~ /css|scss/",
          "group": "navigation@101"
        }
      ]
    },
    "keybindings": [
      {
        "command": "css-property-sorter.sortCssProperties",
        "key": "shift+alt+s",
        "mac": "shift+option+s",
        "when": "editorHasSelection && editorLangId =~ /css|scss/"
      }
    ],
    "configuration": {
      "title": "CSS Property Sorter",
      "properties": {
        "cssPropertySorter.customOrder": {
          "type": "array",
          "default": [
            "position",
            "top",
            "right",
            "bottom",
            "left",
            "z-index",
            "display",
            "visibility",
            "float",
            "clear",
            "overflow",
            "overflow-x",
            "overflow-y",
            "clip",
            "zoom",
